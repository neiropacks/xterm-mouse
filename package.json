{
  "name": "@neiropacks/xterm-mouse",
  "version": "0.0.1",
  "description": "A library for working with the mouse in the terminal.",
  "keywords": [
    "xterm",
    "terminal",
    "mouse",
    "input",
    "cli",
    "node",
    "typescript"
  ],
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --sourcemap && tsc --emitDeclarationOnly --project tsconfig.json",
    "lint": "eslint . && biome check .",
    "format": "biome format --write . && eslint --fix .",
    "lint:fix": "eslint --fix .",
    "biome:check": "biome check --write --unsafe .",
    "dev": "bun run examples/basic.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/bun": "latest",
    "eslint": "^9.38.0",
    "eslint-config-biome": "^2.1.3",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.4.0",
    "lefthook": "^2.0.2",
    "typescript": "^5",
    "typescript-eslint": "^8.46.2"
  },
  "peerDependencies": {},
  "files": [
    "dist"
  ]
}
